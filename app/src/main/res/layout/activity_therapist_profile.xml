<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F6E9FA"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- profile -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F1D9F8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/circleImage"
                    android:background="@drawable/circular_background"
                    android:src="@drawable/baseline_account_circle_24"/>

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Therapist Name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#2C1A35"
                    android:layout_marginTop="14dp" />

                <TextView
                    android:id="@+id/typeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Therapist Type"
                    android:textSize="15sp"
                    android:textColor="#6C4E7D"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#F1D9F8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <TextView
                    android:text="Email"
                    android:textStyle="bold"
                    android:textColor="#5A2D6F"
                    android:textSize="14sp"
                    android:layout_height="25dp"
                    android:layout_width="150dp"/>

                <TextView
                    android:id="@+id/contactInfoTextView"
                    android:text="example@gmail.com"
                    android:textSize="16sp"
                    android:textColor="#2C1A35"
                    android:layout_marginBottom="18dp"
                    android:layout_height="25dp"
                    android:layout_width="150dp"/>

                <TextView
                    android:text="Phone Number"
                    android:textStyle="bold"
                    android:textColor="#5A2D6F"
                    android:textSize="14sp"
                    android:layout_height="25dp"
                    android:layout_width="150dp"/>

                <TextView
                    android:id="@+id/phoneNumberTextView"
                    android:text="+254 700 000 000"
                    android:textSize="16sp"
                    android:textColor="#2C1A35"
                    android:layout_marginBottom="18dp"
                    android:layout_height="25dp"
                    android:layout_width="150dp"/>

                <TextView
                    android:text="Availability"
                    android:textStyle="bold"
                    android:textColor="#5A2D6F"
                    android:textSize="14sp"
                    android:layout_height="25dp"
                    android:layout_width="150dp"/>

                <TextView
                    android:id="@+id/availabilityTextView"
                    android:text="Mon - Fri: 9AM - 5PM"
                    android:textSize="16sp"
                    android:textColor="#2C1A35"
                    android:layout_height="25dp"
                    android:layout_width="300dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
