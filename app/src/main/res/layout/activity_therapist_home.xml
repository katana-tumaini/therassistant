<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBC8F1"
    tools:context=".TherapistHome">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#641BE4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/therasistantlogo"
            android:contentDescription="Therassistant Logo" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:gravity="left"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profileCircle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_account_circle_24"
            android:contentDescription="User Profile"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/messageButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/clientsButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/baseline_people_24"
                android:contentDescription="Clients"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/clientsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clients"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/calendarButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/baseline_edit_calendar_24"
                android:contentDescription="Calendar"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/calendarLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calendar"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/addSessionButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/baseline_add_24"
                android:contentDescription="Add Session"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/addSessionLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Session"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <!-- New Upcoming Sessions Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/upcomingSessionsButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/baseline_event_24"
                android:contentDescription="Upcoming Sessions"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/upcomingSessionsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sessions"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>

    <!-- Message Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/messageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_message_24"
        android:contentDescription="Messages"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
